<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:text="Kalkulator Android"
        android:textSize="14sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/firstNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/secondNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:ignore="SpeakableTextPresentCheck" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/tambahRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah" />

        <RadioButton
            android:id="@+id/kurangRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kurang" />

        <RadioButton
            android:id="@+id/kaliRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kali" />

        <RadioButton
            android:id="@+id/bagiRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bagi" />

    </RadioGroup>

    <Button
        android:id="@+id/hitungButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hitung"
        android:onClick="hitungButtonClick"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:text="Result"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/recordResultCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rekam Hitung" />

    <ListView
        android:id="@+id/resultListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>